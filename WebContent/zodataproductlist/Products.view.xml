<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="zodataproductlist.Products" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Title">
		<content>
		    <Table items="{/ProductSet}">
		    		<columns>
					<Column
						width="12em">
						<Text text="Product ID" />
					</Column>
					<Column
						minScreenWidth="Tablet"
						demandPopin="true">
						<Text text="Name" />
					</Column>
					<Column
						minScreenWidth="Desktop"
						demandPopin="true"
						hAlign="End">
						<Text text="Category" />
					</Column>
					<Column
						minScreenWidth="Desktop"
						demandPopin="true"
						hAlign="Center">
						<Text text="Type Code" />
					</Column>
					<Column
						hAlign="End">
						<Text text="Description" />
					</Column>
				</columns>
				
					<items>
					<ColumnListItem>
						<cells>
							<Text text="{ProductID} " />
							<Text text="{Name}" />
							<Text text="{Category}" />
							<Text text="{Type_code}" />
							<Text text="{Description}" />
						</cells>
					</ColumnListItem>
				</items>
		    </Table>
		</content>
	</Page>
</core:View>